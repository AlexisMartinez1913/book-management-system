@model BookManagementSystem.Dtos.BookDTO

<form asp-action="Create" method="post">
    <div class="form-group row p-1">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group row p-1">
        <label asp-for="Year">Año</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group row p-1">
        <label asp-for="Genre">Género</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group row p-1">
        <label asp-for="PageCount">Número de Páginas</label>
        <input asp-for="PageCount" class="form-control" />
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>
    <div class="form-group row p-1">
        
        <label asp-for="AuthorId">Autor</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors, "Id", "FullName"))">
            <option value="">Seleccione un autor</option>
        </select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>


    <div class="row  mb-4 my-4">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Crear Libro</button>

        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Book" asp-action="Index" class="btn btn-secondary form-control"> Volver a la lista</a>
        </div>
    </div>


    @* <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a> *@
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}